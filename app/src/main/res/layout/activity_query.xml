<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.classify.activity.QueryActivity">

    <include layout="@layout/app_head_search_category"
        android:layout_marginTop="10dp"
        ></include>
    <RadioGroup
        android:id="@+id/class_xq_radio_Group"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RadioButton
            android:textColor="@drawable/select_item_textcolor"
            android:checked="true"
            android:id="@+id/class_xq_btn_zonghe"
            android:gravity="center"
            android:button="@null"
            android:layout_weight="1"
            android:text="综合"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <RadioButton
            android:textColor="@drawable/select_item_textcolor"
            android:id="@+id/class_xq_btn_xiaoliang"
            android:gravity="center"
            android:button="@null"
            android:layout_weight="1"
            android:text="销量"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <RadioButton
            android:textColor="@drawable/select_item_textcolor"
            android:id="@+id/class_xq_btn_jiage"
            android:gravity="center"
            android:button="@null"
            android:layout_weight="1"
            android:text="价格"
            android:layout_width="0dp"
            android:layout_height="match_parent" />


    </RadioGroup>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/class_xq_recycleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.jcodecraeer.xrecyclerview.XRecyclerView>
</LinearLayout>